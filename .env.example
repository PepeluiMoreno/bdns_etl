# =========================================
# BDNS ETL - Environment Variables
# =========================================
# Variables específicas del sistema ETL Admin.
# Hereda variables de bdns_core (.env.development)

# =========================================
# SERVER
# =========================================
HOST=0.0.0.0
PORT=8001
WORKERS=2
DEBUG=false

# =========================================
# CORS
# =========================================
# Orígenes permitidos (separados por coma)
CORS_ORIGINS=http://localhost:3001,http://localhost:5174
CORS_ALLOW_CREDENTIALS=true

# =========================================
# API BDNS OFICIAL
# =========================================
BDNS_API_URL=https://www.infosubvenciones.es/bdnstrans/api
BDNS_API_TIMEOUT=30
BDNS_API_RATE_LIMIT=10
BDNS_API_RETRY_ATTEMPTS=3

# =========================================
# ETL CONFIGURATION
# =========================================
ETL_BATCH_SIZE=1000
ETL_MAX_WORKERS=4
ETL_TEMP_DIR=/tmp/bdns_etl

# =========================================
# DOCKER SECRETS (para usuarios admin/user)
# =========================================
# En Docker: usa secrets en /run/secrets/
# En desarrollo: usa estas variables de entorno

SECRETS_DIR=/run/secrets

# Credenciales de admin (obligatorias)
# Genera el hash con: python -c "from bcrypt import hashpw, gensalt; print(hashpw(b'tu_password', gensalt()).decode())"
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5GyYzpLaOvzK6

# Credenciales de usuario normal (opcionales)
USER_USERNAME=
USER_PASSWORD_HASH=

# =========================================
# WEBSOCKET
# =========================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

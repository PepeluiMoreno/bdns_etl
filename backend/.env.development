# BDNS ETL Backend - Environment Variables

# Database
DATABASE_URL=postgresql://bdns_user:bdns_password@localhost:5432/bdns

# JWT
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Server
HOST=0.0.0.0
PORT=8001
DEBUG=true
WORKERS=1

# CORS
CORS_ORIGINS=http://localhost:3001

# API BDNS Oficial
BDNS_API_URL=https://www.infosubvenciones.es/bdnstrans/api
BDNS_API_TIMEOUT=30
BDNS_API_RATE_LIMIT=10

# Logging
LOG_LEVEL=INFO

# Auto-Resync Configuration
# Thresholds para resincronización automática
AUTO_RESYNC_MAX_NEW_RECORDS=100
AUTO_RESYNC_MAX_UPDATED_RECORDS=50
AUTO_RESYNC_ENABLED=true
